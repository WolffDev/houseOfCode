<Alloy>
	<Window id="create" class="container">
        <View id="eventWrapper" layout="vertical" top="0">
            <View
                width="100%"
                height="50dp"
                layout="composite"
                top="0"
                onClick="myapp.openDiscover">
                <ImageView
                    image="images/arrow.png"
                    width="18dp"
                    top="10dp"
                    left="15dp"
                    ></ImageView>
                <View top="8dp" height="Ti.UI.SIZE">
                    <Label class="createTitleLabel" text="Opret opgave"></Label>
                </View>
            </View>
            <ScrollView id="createScrollView" top="0" scrollType="vertical" layout="vertical">
                <View id="eventCreateDetails" layout="vertical" left="40dp" right="40dp">
                    <TextField id="createTitle" hintText="Titel"></TextField>
                    <TextField id="createAddress" hintText="Adresse"></TextField>
                    <TextField id="createDate" hintText="Dato: dd.mm.åå"></TextField>
                    <TextField id="createNeeds" hintText="Person Behov"></TextField>
                    <TextField id="createCategory" hintText="Kategory"></TextField>
                    <TextField id="createDesc" hintText="Beskrivelse af opgave"></TextField>
                </View>
                <Label id="createBtn" class="white-text" text="Opret" onClick="createEvent"></Label>
            </ScrollView>









        </View>



        <View id="navBottomWrapper">
            <View id="navBottom" layout="horizontal">

                <View class="navBtn" id="discoverNav" onClick="myapp.openLogin">
                    <ImageView image="images/globe.png" class="navImage"></ImageView>
                    <Label text="Opdag" class="navLabel"></Label>
                </View>

                <View class="navBtn" id="tasksNav" onClick="myapp.openTasks">
                    <ImageView image="images/check.png" class="navImage"></ImageView>
                    <Label text="Tilmeldte Opgaver" class="navLabel"></Label>
                </View>

                <View class="navBtn" id="profileNav" onClick="myapp.openProfile">
                    <ImageView image="images/user.png" class="navImage"></ImageView>
                    <Label text="Profil" class="navLabel"></Label>
                </View>

                <View class="navBtn" id="settingsNav" onClick="myapp.openSettigns">
                    <ImageView image="images/cog.png" class="navImage"></ImageView>
                    <Label text="Indstillinger" class="navLabel"></Label>
                </View>

           </View>
       </View>
	</Window>
</Alloy>
